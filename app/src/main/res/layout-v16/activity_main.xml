<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:visibility="visible"
    tools:context="com.doa.factdino.MainActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="75dp"
        android:layout_height="66dp"
        android:layout_marginBottom="315dp"
        android:layout_marginLeft="8dp"
        android:background="@android:color/white"
        android:src="@drawable/dino"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:fontFamily="cutive Mono"

        android:id="@+id/mainFact"
        android:layout_width="241dp"
        android:layout_height="120dp"
        android:layout_marginLeft="-24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/mainfact"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/gifImageView"
        app:layout_constraintTop_toBottomOf="@+id/saids" />

    <TextView
        android:id="@+id/saids"
        android:layout_width="117dp"
        android:layout_height="49dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/fact_raptor_saids"
        app:layout_constraintBottom_toTopOf="@+id/gifImageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
