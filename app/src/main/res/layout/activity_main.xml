<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fontFamily="cutive Mono"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context="com.doa.factdino.MainActivity"
    tools:targetApi="jelly_bean">


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="73dp"
        android:layout_height="66dp"
        android:src="@drawable/dino"
        android:background="@android:color/white"
        android:id="@+id/gifImageView"
        tools:ignore="RtlHardcoded"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/saids"
        app:layout_constraintRight_toLeftOf="@+id/mainFact"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/mainFact"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintVertical_bias="0.348"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/mainFact"
        android:layout_width="254dp"
        android:layout_height="183dp"
        android:text="@string/mainfact"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        android:textSize="50px"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/gifImageView"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/saids"
        tools:ignore="PxUsage" />

    <TextView
        android:id="@+id/saids"
        android:layout_width="162dp"
        android:layout_height="39dp"
        android:text="@string/fact_raptor_saids"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>
